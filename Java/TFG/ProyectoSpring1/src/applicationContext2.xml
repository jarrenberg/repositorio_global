<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

	<bean id="miInforme" class="es.pildoras.IOC.Informe"></bean>
	<!--Si pongo prototype en scope se crean 2 objetos distintos, en caso de 
		no ponerlo todos los objetos creados apuntan al mismo lugar en la memoria 
		(son los mismos). -->
	<bean id="miSecretarioEmpleado"
		class="es.pildoras.IOC.SecretarioEmpleado" scope="prototype">
		<property name="informeNuevo" ref="miInforme"></property>
	</bean>


</beans>